{
  "name": "simply-frp-gui",
  "version": "0.1.1",
  "description": "A lightweight desktop GUI for managing FRP tunnels",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Ryon Whyte",
    "email": "ryon@sitepact.com"
  },
  "homepage": "https://github.com/ryonwhyte/Simply-FRP-GUI-Client",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryonwhyte/Simply-FRP-GUI-Client.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "npm run icons && tsc && vite build && electron-builder",
    "build:linux": "npm run icons && tsc && vite build && electron-builder --linux deb AppImage",
    "build:snap": "npm run icons && tsc && vite build && electron-builder --linux snap",
    "build:win": "npm run icons && tsc && vite build && electron-builder --win",
    "build:mac": "npm run icons && tsc && vite build && electron-builder --mac",
    "icons": "node scripts/generate-icons.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.simplyfrp.gui",
    "productName": "simply-frp-gui",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "snap": {
      "summary": "Desktop GUI for managing FRP tunnels",
      "description": "A lightweight desktop application for managing FRP (Fast Reverse Proxy) tunnels. Expose local services to the internet with ease.",
      "category": "Development",
      "plugs": ["home", "network", "network-bind", "desktop", "desktop-legacy", "wayland", "x11", "unity7", "browser-support", "password-manager-service"]
    },
    "linux": {
      "target": ["deb", "AppImage", "snap"],
      "category": "Development",
      "icon": "resources/icons",
      "desktop": {
        "Name": "Simply FRP GUI",
        "Comment": "Manage FRP tunnels with ease",
        "Categories": "Development;Network;Utility"
      }
    },
    "deb": {
      "priority": "optional",
      "packageCategory": "utils",
      "synopsis": "Desktop GUI for managing FRP tunnels",
      "depends": [
        "libc6",
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0",
        "curl"
      ],
      "afterInstall": "build/postinst",
      "afterRemove": "build/postrm"
    },
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
